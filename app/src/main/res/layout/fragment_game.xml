<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".GameFragment">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/PlayerTurn"
                android:text=""
                tools:text="Sanjit"
                android:textSize="30sp"
                android:layout_weight="1"
                android:gravity="right"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="'s turn"
                android:textSize="30sp"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="#0B0B0B"
            android:orientation="vertical">

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/one"
                    android:layout_width="55sp"
                    android:layout_height="55sp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textSize="35sp"
                    tools:text="X" />

                <TextView
                    android:id="@+id/two"
                    android:layout_width="55sp"
                    android:layout_height="55sp"
                    android:layout_marginLeft="4dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textSize="35sp"
                    tools:text="X" />

                <TextView
                    android:id="@+id/three"
                    android:layout_width="55sp"
                    android:layout_height="55sp"
                    android:layout_marginLeft="4dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textSize="35sp"
                    tools:text="X" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/four"
                    android:layout_width="55sp"
                    android:layout_height="55sp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textSize="35sp"
                    tools:text="X" />

                <TextView
                    android:id="@+id/five"
                    android:layout_width="55sp"
                    android:layout_height="55sp"
                    android:layout_marginLeft="4dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textSize="35sp"
                    tools:text="X" />

                <TextView
                    android:id="@+id/six"
                    android:layout_width="55sp"
                    android:layout_height="55sp"
                    android:layout_marginLeft="4dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textSize="35sp"
                    tools:text="X" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/seven"
                    android:layout_width="55sp"
                    android:layout_height="55sp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textSize="35sp"
                    tools:text="X" />

                <TextView
                    android:id="@+id/eight"
                    android:layout_width="55sp"
                    android:layout_height="55sp"
                    android:layout_marginLeft="4dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textSize="35sp"
                    tools:text="X" />

                <TextView
                    android:id="@+id/nine"
                    android:layout_width="55sp"
                    android:layout_height="55sp"
                    android:layout_marginLeft="4dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textSize="35sp"
                    tools:text="X" />

            </LinearLayout>

        </LinearLayout>


        <Button
            android:layout_marginTop="50dp"
            android:id="@+id/playAgain"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play Again" />

        <Button
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:id="@+id/scoreButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lastPlayerOne"
                android:text=""
                tools:text="Samkit : "
                android:textSize="30sp"
                android:layout_weight="1"
                android:gravity="right"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/lastPlayerOneScore"
                android:text=""
                tools:text="0"
                android:textSize="30sp"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lastPlayerTwo"
                android:text=""
                tools:text="Sanjit : "
                android:textSize="30sp"
                android:layout_weight="1"
                android:gravity="right"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/lastPlayerTwoScore"
                android:text=""
                tools:text="0"
                android:textSize="30sp"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>
</layout>